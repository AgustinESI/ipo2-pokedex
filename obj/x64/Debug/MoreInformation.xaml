<Page
    x:Class="ipo2_pokedex.MoreInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ipo2_pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Viewbox>

        <Grid Height="1000" Width="1500">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='2' x:Name="DesaText" x:Uid="DesaText" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Desarrolladores del proyecto" VerticalAlignment="Top" Margin="0,0,0,25" FontSize="36" Foreground="White"/>
            <Button x:ConnectionId='3' x:Name="btnDesarrolladores" x:Uid="btnDesarrolladores" Grid.Column="0" Grid.Row="0" Content="Desarrolladores" Margin="0,10,1303,0" VerticalAlignment="Top" FontSize="24" Background="#FFE91E63" Foreground="White" FocusVisualPrimaryBrush="#FFE91E63" BorderBrush="#FFE91E63" FocusVisualSecondaryBrush="#FFE91E63" HorizontalAlignment="Right"/>
            <Button x:ConnectionId='4' x:Name="btnFAQ" x:Uid="btnFAQ" Grid.Column="0" Grid.Row="0" Content="FAQ" Margin="212,10,0,0" VerticalAlignment="Top" FontSize="24" Background="#FFDE80A0" Foreground="White"                     />

            <Image Grid.Row="1" HorizontalAlignment="Left" Height="225" VerticalAlignment="Center" Width="225" Source="/Assets/images/developers/agustin.png" Margin="20,0,0,20"/>
            <TextBlock  Grid.Row="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Agustín Sánchez Martín" VerticalAlignment="Center" Margin="376,0,0,0" FontSize="36" Foreground="White"/>
            <Button x:ConnectionId='5' x:Name="GitAgustin" x:Uid="GitAgustin" Grid.Row="1" Content="Ver Perfil GitHub" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,250,0"                        Background="#FFE91E63"/>

            <Image Grid.Row="2" HorizontalAlignment="Left" Height="225" VerticalAlignment="Center" Width="225" Source="/Assets/images/developers/roberto.png" Margin="20,0,0,20"/>
            <TextBlock Grid.Row="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Roberto Ortiz Cañamero" VerticalAlignment="Center" Margin="376,0,0,25" FontSize="36" Foreground="White"/>
            <Button x:ConnectionId='6' x:Name="GitRoberto" x:Uid="GitRoberto" Grid.Row="2" Content="Ver Perfil GitHub" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,250,0"                        Background="#FFE91E63"/>


            <Image  Grid.Row="3" HorizontalAlignment="Left" Height="239" VerticalAlignment="Center" Width="224" Source="/Assets/images/developers/miriam.png" Margin="20,0,0,0"/>
            <TextBlock  Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Miriam López-Tercero Noblejas" VerticalAlignment="Center" Margin="376,0,0,25" FontSize="36" Foreground="White"/>
            <Button x:ConnectionId='7' x:Name="GitMiriam" x:Uid="GitMiriam" Grid.Row="3" Content="Ver Perfil GitHub" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,250,0"                        Background="#FFE91E63"/>





        </Grid>


    </Viewbox>


</Page>

