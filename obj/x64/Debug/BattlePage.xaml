<Page
    x:Class="ipo2_pokedex.BattlePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ipo2_pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/images/battleground.jpg"/>
    </Page.Background>

    <Viewbox Stretch="Fill">

        <Grid Height="1000" Width="1500">
            <Grid.RowDefinitions>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Margin="40,15,40,15" Grid.Row="1">
                <Grid x:ConnectionId='16' x:Name="pokemon1" HorizontalAlignment="Center" Width="730" Height="480" VerticalAlignment="Center" Padding="30,30,30,30"/>
            </Viewbox>
            <Viewbox Margin="40,21,40,9" Grid.Column="1">
                <Grid x:ConnectionId='15' x:Name="pokemon2" HorizontalAlignment="Center" Width="730" Height="480" VerticalAlignment="Center" Padding="30,30,30,30"/>
            </Viewbox>
            <Viewbox>
                <Grid x:ConnectionId='9' x:Name="p2actions" Height="450" Width="750">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/images/message-removebg-preview.png"/>
                    </Grid.Background>
                    <Button x:ConnectionId='10' x:Name="p2strong" FontFamily="Berlin Sans FB" Content="Ataque Fuerte" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                        HorizontalAlignment="Center" IsEnabled="False" Grid.Column="0" Grid.Row="2"/>
                    <Button x:ConnectionId='11' x:Name="p2weak" FontFamily="Berlin Sans FB" Content="Ataque Flojo" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                      IsEnabled="False" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center"/>
                    <Button x:ConnectionId='12' x:Name="p2flee" FontFamily="Berlin Sans FB" Content="Huir"  VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                HorizontalAlignment="Center" IsEnabled="False" Grid.Column="0" Grid.Row="3"/>
                    <TextBlock x:ConnectionId='13' x:Name="p2name" FontFamily="Berlin Sans FB" HorizontalAlignment="Center" Margin="33,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="46" Width="680" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="36"/>
                    <Button x:ConnectionId='14' x:Name="p2ultrabeast" FontFamily="Berlin Sans FB" Content="Mega-Evolución" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                        HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" IsEnabled="False" Opacity="0"/>
                </Grid>
            </Viewbox>
            <Viewbox Grid.ColumnSpan="2" Margin="746,6,4,94" Grid.RowSpan="2" Grid.Row="1">
                <Grid x:ConnectionId='3' x:Name="p1actions" Height="450" Width="750">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/images/message-removebg-preview.png"/>
                    </Grid.Background>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='4' x:Name="p1strong" FontFamily="Berlin Sans FB" Content="Ataque Fuerte" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                        HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                    <Button x:ConnectionId='5' x:Name="p1weak" FontFamily="Berlin Sans FB" Content="Ataque Flojo" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                      HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1"/>
                    <Button x:ConnectionId='6' x:Name="p1flee" FontFamily="Berlin Sans FB" Content="Huir" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                    <Button x:ConnectionId='7' x:Name="p1ultrabeast" FontFamily="Berlin Sans FB" Content="Mega-Evolución" VerticalAlignment="Center" Height="92" Width="286" FontSize="36" Foreground="Black"                        HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" IsEnabled="False" Opacity="0"/>
                    <TextBlock x:ConnectionId='8' x:Name="p1name" FontFamily="Berlin Sans FB" HorizontalAlignment="Center" Margin="33,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="46" Width="680" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="36"/>


                </Grid>
            </Viewbox>
            <Viewbox Grid.ColumnSpan="2" Margin="0,442,4,9" Grid.Row="1" Grid.RowSpan="2">
                <TextBox x:ConnectionId='2' x:Name="message" FontFamily="Berlin Sans FB" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="79" Width="1481" FontSize="30" TextAlignment="Center" Foreground="White" Background="#FF2C4B60" BorderBrush="#FFC6A341" BorderThickness="10,10,10,10" Padding="10,10,10,10" IsReadOnly="True" SelectionHighlightColor="#FF2C4B60" PlaceholderForeground="White" SelectionHighlightColorWhenNotFocused="#FFC6A341" FocusVisualPrimaryBrush="#99000000"/>
            </Viewbox>

        </Grid>
    </Viewbox>
</Page>

