<Page
    x:Class="ipo2_pokedex.SelectPokemonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ipo2_pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF004B8F"/>
            <GradientStop Color="#FF64AAEA" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Viewbox>

        <Grid x:ConnectionId='2' x:Name="tbplayer1" Height="1000" Width="1500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Center"  FontFamily="Berlin Sans FB" Margin="0,0,0,810" TextWrapping="Wrap" Text="PLAYER 1" VerticalAlignment="Bottom" FontSize="72" Grid.Column="0"/>
            <TextBlock HorizontalAlignment="Center"  FontFamily="Berlin Sans FB" Margin="0,0,0,811" TextWrapping="Wrap" Text="PLAYER 2" VerticalAlignment="Bottom" FontSize="72" Grid.Column="1"/>

            <GridView x:ConnectionId='3' x:Name="gvPokemonsPlayer1" RequestedTheme="Light" IsItemClickEnabled="True" Margin="10,194,10,10" UseLayoutRounding="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"                                     Grid.Column="0"/>
            <GridView x:ConnectionId='4' x:Name="gvPokemonsPlayer2" RequestedTheme="Light" IsItemClickEnabled="True" Margin="10,194,10,10" UseLayoutRounding="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"                                     Grid.Column="1"/>

        </Grid>
    </Viewbox>
</Page>

